{{#if sidebar.popular}}
<div class="card mt-2">
    <div class="card-header bg-dark text-white">
        <h5><i class="fas fa-fire mr-3"></i>Imagenes mas populares</h5>
    </div>
    <div class="card-body">
        <div class="row">
            {{#each sidebar.popular}}
                <div class="col-md-2">
                    <a href="/images/{{uniqueId}}">
                        <img src="/public/upload/{{filename}}" class="w-100 h-100 image-thumbnail"  alt="">
                    </a>
                </div>
            {{/each}}
        </div>
    </div>
</div>
{{/if}}